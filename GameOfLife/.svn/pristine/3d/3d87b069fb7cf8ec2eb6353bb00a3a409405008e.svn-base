	@Override
	protected void paintComponent(Graphics g) {
		super.paintComponent(g);
		Graphics2D g2 = (Graphics2D) g;

		/*
		 * TODO 3: Implement this method to draw the game board.  You don't have to 
		 * draw the grid if you don't want, just the occupied cells.
		 */	
		for(int r = 0; r < this.occupiedList.length; r++) {
			for(int c = 0; c < this.occupiedList[1].length; c++) {
				Rectangle2D.Double cell = new Rectangle2D.Double(c*this.DOT_SIZE, r*this.DOT_SIZE, this.DOT_SIZE, this.DOT_SIZE);
				if(isOccupied(r,c)) {
					g2.setColor(Color.black);
					g2.fill(cell);
				}
			}
		}
