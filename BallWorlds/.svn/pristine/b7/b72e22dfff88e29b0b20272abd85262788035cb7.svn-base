package ballworlds;

import java.awt.Color;

/**
 * 
 * A ball that moves and bounces when it hits the boundries of the 
 * component it is drawn on
 *
 * @author goldacbj.
 *         Created Jan 29, 2015.
 */
public class Bouncer extends AbstractBouncer {
	
	private static final double DIAMETER = 25;
	/**
	 * 
	 * uses the super class to construct the bouncer
	 *
	 * @param world
	 */
	public Bouncer(BallEnvironment world) {
		super(world);
	}

	@Override
	public Color getColor() {
		return Color.PINK;
	}

	@Override
	public void updateSize() {
		// Doesn't change size
		
	}

	@Override
	public void updateColor() {
		// Stays the same color
		
	}

	@Override
	public double getDiameter() {
		return DIAMETER;
	}

}
